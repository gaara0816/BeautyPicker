<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/theme_color_highlight</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <!--&lt;!&ndash; SearchView &ndash;&gt;-->
        <!--<item name="searchViewStyle">@style/MySearchViewStyle</item>-->
        <!--<item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>-->
        <!--<item name="colorControlActivated">@color/common_theme</item>-->

    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.ToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>
</resources>